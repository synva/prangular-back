{
  "port": 3000,
  "cors": [],
  "fixedSubDomain": false,
  "logger": {
    "appenders": {
      "stdout": {
        "type": "dateFile",
        "filename": "/opt/log/budousan/budousan-back/out_log4js.log",
        "pattern": "__yyyy-MM-dd",
        "layout": {
          "type": "pattern",
          "pattern": "%d{yyyy-MM-dd hh:mm:ss}: %p: %m"
        }
      },
      "error": {
        "type": "dateFile",
        "filename": "/opt/log/budousan/budousan-back/error_log4js.log",
        "pattern": "__yyyy-MM-dd",
        "layout": {
          "type": "pattern",
          "pattern": "%d{yyyy-MM-dd hh:mm:ss}: %p: %m"
        }
      },
      "just-errors": { "type": "logLevelFilter", "appender": "error", "level": "error" }
    },
    "categories": {
      "default": { "appenders": ["just-errors", "stdout"], "level": "info" }
    }
  },
  "image": ["JPG", "JPEG", "PNG", "TIF", "TIFF", "SVG"],
