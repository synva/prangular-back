{
  "port": 80,
  "cors": [],
  "logger": {
    "appenders": {
      "stdout": {
        "type": "dateFile",
        "filename": "out_log4js.log",
        "pattern": "__yyyy-MM-dd",
        "layout": {
          "type": "pattern",
          "pattern": "%d{yyyy-MM-dd hh:mm:ss}: %p: %m"
        }
      },
      "error": {
        "type": "file",
        "filename": "error_log4js.log",
        "maxLogSize": 10485760,
        "backups": 3,
        "layout": {
          "type": "pattern",
          "pattern": "%d{yyyy-MM-dd hh:mm:ss}: %p: %m"
        }
      },
      "just-errors": { "type": "logLevelFilter", "appender": "error", "level": "error" }
    },
    "categories": {
      "default": { "appenders": ["just-errors", "stdout"], "level": "info" }
    }
  },
  "image": ["JPG", "JPEG", "PNG", "TIF", "TIFF", "SVG"],
  "mongo": {
    "server": "127.0.0.1",
    "port": 55555,
    "db": "budousan",
    "limit": 24,
    "user": "budousan",
    "password": "budousan.123"
  },
  "session": {
    "mode": "mongo",
    "redisHost": "any-server",
    "redisPort": 6379,
    "redisdb": 0,
    "cookiePath": "/session/",
    "cookieMaxAge": 1209600000,
    "key": "xiefan",
    "secret": "xiefan-secret"
  },
  "authentication": {
    "mode": "basic"
  },
  "storagy": {
    "mode": "s3",
    "bucket": "budousan-static.wyxtech.com",
    "region": "ap-northeast-1",
    "upload": "upload"
  },
  "cluster": {
    "instances": 3
  }
}
